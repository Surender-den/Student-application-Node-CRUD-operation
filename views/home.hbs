<h3>Student Management System</h3>
<p><a href="/adduser" class="add-btn">Add User</a></p>
<table>
    <thead>
        <tr>
            <td>#</td>
            <td>Name</td>
            <td>Age</td>
            <td>City</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>
    <tbody>
        {{#each rows}}
        <tr>    
            <td>{{this.ID}}</td>
            <td>{{this.NAME}}</td>
            <td>{{this.AGE}}</td>
            <td>{{this.CITY}}</td>
            
            <td><a class="edit" href="/edituser/{{this.ID}}">Edit</a></td>
            <td><a onclick="return confirm('Are you sure?')" class="delete" href="/deleteuser/{{this.ID}}">Delete</a></td>
        </tr>
        {{/each}}


    </tbody>
</table>
   <div class="pagination">
        {{#if (gt currentPage 1)}}
            <a href="?page={{sub currentPage 1}}&limit={{limit}}">Previous</a>
        {{/if}}
        {{#each (range totalPages)}}
            <a href="?page={{this}}&limit={{../limit}}" class="{{#if (eq ../currentPage this)}}active{{/if}}">{{this}}</a>
            
        {{/each}}
        {{#if (lt currentPage totalPages)}}
            <a href="?page={{add currentPage 1}}&limit={{limit}}">Next</a>
        {{/if}}
    </div>